# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/soulmob_db

# Server Configuration
PORT=3000
NODE_ENV=development
API_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=7d

# Smart Home Integration (Environmental Orchestrator)
SMART_HOME_API_URL=http://localhost:8123
SMART_HOME_API_TOKEN=your-home-assistant-token

# Vector Database (Temporal Echo)
VECTOR_DB_PATH=./data/vector_db
VECTOR_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Intent Projection Configuration
INTENT_MODEL_PATH=./models/intent_predictor.tflite
PERSONALITY_MODEL_PATH=./models/neural_personality.tflite

# Logging
LOG_LEVEL=debug

# Feature Flags
ENABLE_TEMPORAL_ECHO=true
ENABLE_ENVIRONMENTAL_ORCHESTRATOR=true
ENABLE_INTENT_PROJECTION=true
